<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Collector_register">


    <EditText
        android:id="@+id/PersonName"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/txtbg"
        android:drawableLeft="@drawable/lftrefimg1"
        android:hint="  Name"
        android:paddingLeft="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:inputType="textPersonName"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/txtbg"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:hint="  Phone No."
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PersonName" />


    <EditText
        android:id="@+id/rpasw"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/txtbg"
        android:drawableLeft="@drawable/baseline_remove_red_eye_24"
        android:ems="12"
        android:hint="  Create Password"
        android:inputType="textPassword"
        android:paddingStart="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />




    <EditText
        android:id="@+id/collector_id"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/txtbg"
        android:ems="12"
        android:hint="Collector Registration Id"
        android:inputType="number"
        android:paddingStart="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rpasw" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/txtbg"
        android:ems="12"
        android:hint="  Email"
        android:inputType="textEmailAddress"
        android:paddingStart="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="25dp"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableLeft="@drawable/baseline_email_24"
        app:layout_constraintTop_toBottomOf="@+id/phonenumber" />




    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_butt"
        android:layout_width="153dp"
        android:layout_height="56dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="120dp"
        android:background="#4CBB17"
        android:gravity="center"
        android:text="Register"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/collector_id" />

    <TextView
        android:id="@+id/alreadyaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#7439DD"
        android:text="@string/already_register_login_here"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@+id/register_butt" />




</androidx.constraintlayout.widget.ConstraintLayout>